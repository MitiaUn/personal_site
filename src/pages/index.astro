  <!-- Hero Section -->
  <section class="min-h-screen flex items-center justify-center pt-16 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-blue-500/10 to-purple-500/10 -z-10"></div>
    <div class="max-w-4xl mx-auto text-center px-4">
      <h1 class="text-5xl md:text-7xl font-bold mb-6 tracking-tight">
        Hi, I'm <span class="bg-clip-text text-transparent bg-gradient-to-r from-blue-500 to-purple-600">Dimitri</span>
      </h1>
      <p class="text-xl md:text-2xl text-slate-600 dark:text-slate-300 mb-8 leading-relaxed max-w-2xl mx-auto">
        RnD Director & Physicist. Driving innovation in electronics and renewable energy. 
        Expert in managing cross-disciplinary teams and bringing deep-tech products from POC to industrialization.
      </p>
      <div class="flex flex-wrap gap-4 justify-center">
        <a href="#projects" class="px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-full font-bold transition-all shadow-lg hover:shadow-blue-500/25">
          View Work
        </a>
        <a href="/sport" class="px-8 py-3 glass hover:bg-white/20 rounded-full font-bold transition-all flex items-center gap-2">
          <span>üèÉ‚Äç‚ôÇÔ∏è</span> Sports Journey
        </a>
      </div>
    </div>
  </section>

  <!-- CV Section -->
  <section id="cv" class="max-w-4xl mx-auto px-4 py-20">
    <h2 class="text-3xl font-bold mb-12 flex items-center gap-3">
      <span class="w-8 h-8 rounded-lg bg-blue-500/20 flex items-center justify-center">üíº</span>
      Experience
    </h2>
    <Timeline items={experience} />

    <h2 class="text-3xl font-bold mb-12 mt-20 flex items-center gap-3">
      <span class="w-8 h-8 rounded-lg bg-purple-500/20 flex items-center justify-center">üéì</span>
      Education
    </h2>
    <Timeline items={education} />
    
    <h2 class="text-3xl font-bold mb-12 mt-20 flex items-center gap-3">
      <span class="w-8 h-8 rounded-lg bg-green-500/20 flex items-center justify-center">üî¨</span>
      Selected Publications
    </h2>
    <Timeline items={publications} />
  </section>

  <!-- Projects Section -->
  <section id="projects" class="mt-32">
    <h2 class="text-4xl font-bold mb-12 flex items-center gap-3 px-4 max-w-4xl mx-auto">
       <span class="w-8 h-8 rounded-lg bg-yellow-500/20 flex items-center justify-center">üöÄ</span>
       Key Projects & Innovations
    </h2>
    <ProjectCarousel />
  </section>
</Layout>

