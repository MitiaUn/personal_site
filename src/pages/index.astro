---
import Layout from '../layouts/Layout.astro';
import Timeline from '../components/Timeline.astro';
import ProjectCarousel from '../components/ProjectCarousel.astro';

const experience = [
  {
    date: "2022 - Present",
    title: "RnD Director",
    organization: "Freshape, Switzerland",
    description: "Leading 30-member RnD division (4 teams, 7 direct reports including HW team). Driving development of 5 products in the fields of electronics and renewable energy.",
    highlights: [
      "Managing a portfolio of patents and steering IP strategy to protect key innovations.",
      "Implemented OKR framework aligned to product milestones, boosting delivery quality and shortening cycle times."
    ]
  },
  {
    date: "2020 - 2022",
    title: "RnD Manager",
    organization: "Freshape (former H.Glass), Switzerland",
    description: "Built and guided cross-disciplinary team of 12 people incl. material scientists, HW and SW engineers. Drove product development from POC to industrialization.",
    highlights: [
      "Managed a 2-year, $0.5 M federal-grant collaboration with CSEM."
    ]
  },
  {
    date: "2019 - 2020",
    title: "Scientist",
    organization: "H.Glass, Switzerland",
    description: "Conceived and prototyped a novel photovoltaics product, securing budget for further dev.",
    highlights: [
      "Doubled efficiency of the organic PV cell with optimization of materials and fabrication."
    ]
  },
  {
    date: "2015 - 2019",
    title: "Doctoral Assistant",
    organization: "Nano-Electronics Lab, EPFL, Switzerland",
    description: "Research of quantum phenomena in 2-dimensional systems.",
    highlights: [
      "Main Achievements: Demonstration of the first excitonic transistors operational at room-temperature.",
      "12 publications in high impact journals including Nature."
    ]
  }
];

const education = [
  {
    date: "2015 - 2019",
    title: "Ph.D. in Electrical Engineering",
    organization: "EPFL, Lausanne, Switzerland",
    description: "Doctoral school of Microsystems and Microelectronics (EDMI) at EE department."
  },
  {
    date: "2013 - 2015",
    title: "M.Sc. in Physics",
    organization: "Ecole Polytechnique (X), Paris, France",
    description: "Thesis: Synthesis and characterization of nanomaterials. Ranked 1st in the class."
  },
  {
    date: "2009 - 2013",
    title: "B.Sc. in Physics and Technology of Nanostructures",
    organization: "MIPT, Moscow, Russia",
    description: "Diploma with high honors. GPA: 4.94/5."
  }
];

const publications = [
  {
    date: "2018",
    title: "Room-temperature electrical control of exciton flux",
    organization: "Nature",
    description: "D. Unuchek et al., Nature, 2018. Demonstrated the first room-temperature excitonic transistor."
  },
  {
    date: "2019",
    title: "Valley-polarized exciton currents",
    organization: "Nature Nanotechnology",
    description: "D. Unuchek et al., Nature Nano, 2019. Research on valley-polarized exciton currents in van der Waals heterostructures."
  }
];
---

