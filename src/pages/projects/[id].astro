---
import Layout from '../../layouts/Layout.astro';
import { projects } from '../../data/projects';

export function getStaticPaths() {
  return projects.map(project => ({
    params: { id: project.id },
  }));
}

const { id } = Astro.params;
const project = projects.find(p => p.id === id);

if (!project) {
  return Astro.redirect('/404');
}
const base = import.meta.env.BASE_URL === '/' ? '' : import.meta.env.BASE_URL.replace(/\/$/, '');
---

<Layout title={`${project.title} | Projects`}>
  <div class="max-w-4xl mx-auto min-h-screen flex flex-col justify-center py-12">
    <a href={`${base}/#projects`} class="inline-flex items-center text-blue-500 hover:text-blue-600 mb-8 font-medium transition-colors w-fit">
      <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Back to Projects
    </a>

    <div class="glass-card overflow-hidden !p-0 project-card">
      <div class="aspect-video w-full overflow-hidden">
        <img 
          src={project.image} 
          alt={project.title} 
          class="w-full h-full object-cover"
          transition:name={`img-${id}`}
        />
      </div>
      
      <div class="p-8 md:p-12">
        <h1 class="text-4xl font-bold mb-6" transition:name={`title-${id}`}>{project.title}</h1>
        
        <div class="flex flex-wrap gap-3 mb-8 text-sm">
          {project.stack.map(tech => (
            <span class="px-3 py-1 bg-blue-500/10 text-blue-500 rounded-full border border-blue-500/20 font-medium">
              {tech}
            </span>
          ))}
        </div>

        <div class="prose dark:prose-invert max-w-none text-xl leading-relaxed text-slate-600 dark:text-slate-400">

          <p>{project.description}</p>
        </div>

        {project.links && (
          <div class="mt-8 flex flex-wrap gap-4">
            {project.links.paper && (
              <a href={project.links.paper} target="_blank" rel="noopener noreferrer" class="inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-full font-bold transition-all shadow-lg hover:shadow-blue-500/25">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
                Read Paper
              </a>
            )}
            {project.links.live && (
              <a href={project.links.live} target="_blank" rel="noopener noreferrer" class="inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-full font-bold transition-all shadow-lg hover:shadow-blue-500/25">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
                View Live
              </a>
            )}
            {project.links.source && (
              <a href={project.links.source} target="_blank" rel="noopener noreferrer" class="inline-flex items-center px-6 py-3 bg-slate-800 hover:bg-slate-900 text-white rounded-full font-bold transition-all shadow-lg hover:shadow-slate-500/25">
                 <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                </svg>
                View Source
              </a>
            )}
          </div>
        )}
      </div>
    </div>
  </div>
</Layout>

<script define:vars={{ base }}>
  document.addEventListener('click', (event) => {
    const card = document.querySelector('.project-card');
    const isLink = event.target.closest('a');
    const isButton = event.target.closest('button');
    
    // Only navigate if clicking outside the card and not on an interactive element
    if (card && !card.contains(event.target) && !isLink && !isButton) {
      window.location.href = `${base}/#projects`;
    }
  });
</script>
