---
import Layout from '../../layouts/Layout.astro';

export function getStaticPaths() {
  return [
    { params: { id: 'project-1' } },
    { params: { id: 'project-2' } },
    { params: { id: 'project-3' } },
  ];
}

const { id } = Astro.params;

const projects = {
  "project-1": {
    title: "Excitonic Transistor",
    image: "https://images.unsplash.com/photo-1635070041078-e363dbe005cb?q=80&w=800&auto=format&fit=crop",
    stack: ["Nanotech", "Physics", "Nature", "2D Materials"],
    description: "Research of quantum phenomena in 2-dimensional systems. Main Achievements: Demonstration of the first excitonic transistors operational at room-temperature. This groundbreaking work was published in Nature (2018) and featured on the cover of Nature Photonics (2019). It involved complex cleanroom microfabrication, low-temperature electrical transport measurements, and optical spectroscopy.",
    links: { live: "#", source: "#" }
  },
  "project-2": {
    title: "Freshape Product Suite",
    image: "https://images.unsplash.com/photo-1581093458791-9f3c3900df4b?q=80&w=800&auto=format&fit=crop",
    stack: ["RnD Management", "Electronics", "Green Tech", "Product Dev"],
    description: "As RnD Director at Freshape, I lead a 30-member division driving the development of 5 products in the fields of electronics and renewable energy. I manage a portfolio of patents and steer the IP strategy. We successfully implemented an OKR framework aligned to product milestones, significantly boosting delivery quality and shortening cycle times.",
    links: { live: "#", source: "#" }
  },
  "project-3": {
    title: "Novel PV Tech",
    image: "https://images.unsplash.com/photo-1509391366360-2e959784a276?q=80&w=800&auto=format&fit=crop",
    stack: ["Photovoltaics", "Prototyping", "Innovation", "Material Science"],
    description: "At H.Glass, I conceived and prototyped a novel photovoltaics product, securing the budget for its further development. By optimizing materials and fabrication processes, I was able to double the efficiency of the organic PV cell, marking a significant milestone in the company's technology roadmap.",
    links: { live: "#", source: "#" }
  }
};

const project = projects[id as keyof typeof projects];
---

<Layout title={`${project.title} | Projects`}>
  <div class="max-w-4xl mx-auto">
    <a href="/#projects" class="inline-flex items-center text-blue-500 hover:text-blue-600 mb-8 font-medium transition-colors">
      <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Back to Projects
    </a>

    <div class="glass-card overflow-hidden !p-0">
      <div class="aspect-video w-full overflow-hidden">
        <img 
          src={project.image} 
          alt={project.title} 
          class="w-full h-full object-cover"
          transition:name={`img-${id}`}
        />
      </div>
      
      <div class="p-8 md:p-12">
        <h1 class="text-4xl font-bold mb-6" transition:name={`title-${id}`}>{project.title}</h1>
        
        <div class="flex flex-wrap gap-3 mb-8 text-sm">
          {project.stack.map(tech => (
            <span class="px-3 py-1 bg-blue-500/10 text-blue-500 rounded-full border border-blue-500/20 font-medium">
              {tech}
            </span>
          ))}
        </div>

        <div class="prose dark:prose-invert max-w-none text-xl leading-relaxed text-slate-600 dark:text-slate-400">
          <p>{project.description}</p>
        </div>
      </div>
    </div>
  </div>
</Layout>
