---
import { projects } from '../data/projects';
const base = import.meta.env.BASE_URL === '/' ? '' : import.meta.env.BASE_URL.replace(/\/$/, '');
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 py-12">
  {projects.map(project => (
    <div class="w-full h-full">
      <a href={`${base}/projects/${project.id}`} class="block group h-full">
        <div class="glass-card project-card h-full flex flex-col overflow-hidden !p-0 transition-transform duration-300 hover:-translate-y-1">
          <div class="aspect-video relative overflow-hidden">
            <img 
              src={project.image} 
              alt={project.title} 
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
              transition:name={`img-${project.id}`}
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent opacity-60"></div>
            <div class="absolute bottom-4 left-4">
              <h3 class="text-xl font-bold text-white" transition:name={`title-${project.id}`}>{project.title}</h3>
            </div>
          </div>
          <div class="p-6 flex-1 flex flex-col">
            <p class="text-slate-600 dark:text-slate-400 mb-4 flex-1">{project.teaser}</p>
            <div class="flex flex-wrap gap-2">
              {project.stack.slice(0, 3).map(tech => (
                <span class="text-[9px] uppercase tracking-wider px-1.5 py-0.5 bg-white/10 dark:bg-slate-800/50 rounded-md border border-slate-200 dark:border-slate-700 text-slate-500 dark:text-slate-400">
                  {tech}
                </span>
              ))}
            </div>
          </div>
        </div>
      </a>
    </div>
  ))}
</div>

<style>
  .project-card:hover {
      background-image: linear-gradient(to bottom right, rgba(59, 130, 246, 0.15), rgba(147, 51, 234, 0.15));
      border-color: rgba(59, 130, 246, 0.3);
      background-color: rgba(0, 0, 0, 0.6);
  }
</style>
