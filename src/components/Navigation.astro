                    <a 
                      href={link.url} 
                      target="_blank" 
                      rel="noopener noreferrer" 
                      class="flex items-center gap-3 text-white/90 bg-slate-800/90 backdrop-blur-md py-2.5 px-4 rounded-full shadow-lg border border-white/10 hover:bg-slate-700/90 transition-all whitespace-nowrap"
