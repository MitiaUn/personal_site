                      <span class="text-sm font-medium">{link.name}</span>
                    </a>
                ))}
            </div>

            <button 
              id="mobile-menu-toggle" 
              class="bg-white/10 hover:bg-white/20 text-white px-4 py-2 rounded-full transition-colors border border-white/10 whitespace-nowrap"
            >
              Get in Touch
            </button>
        </div>
    </div>
</nav>

<script>
  function setupActiveHighlighting() {
    const sections = document.querySelectorAll('section[id]');
    const navLinks = document.querySelectorAll('.nav-link');
    
    // Helper to clear active states from hash links
    function clearActive() {
      navLinks.forEach(link => {
        const href = link.getAttribute('href');
        if (href && (href.includes('/#') || href.startsWith('#'))) {
          link.classList.remove('text-blue-600', 'font-bold', 'bg-blue-900/20');
          link.classList.add('text-slate-400');
        }
      });
    }

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const id = entry.target.getAttribute('id');
          if (window.location.pathname === import.meta.env.BASE_URL || window.location.pathname === import.meta.env.BASE_URL + '/') {
            clearActive();
            const activeLink = document.querySelector(`.nav-link[href*="#${id}"]`);
            if (activeLink) {
              activeLink.classList.remove('text-slate-400');
              activeLink.classList.add('text-blue-600', 'font-bold', 'bg-blue-900/20');
            }
          }
        }
      });
    }, { 
      threshold: 0.1, 
      rootMargin: '-10% 0px -50% 0px' 
    });

    sections.forEach(section => observer.observe(section));
  }

  function setupMobileMenu() {
    const toggleBtn = document.getElementById('mobile-menu-toggle');
    const speedDial = document.getElementById('mobile-speed-dial');
    
    if (!toggleBtn || !speedDial) return;

    let isOpen = false;

    function toggleMenu() {
      isOpen = !isOpen;
      if (isOpen) {
        speedDial.setAttribute('data-open', 'true');
        toggleBtn.textContent = 'Close';
        // Add click outside listener
        document.addEventListener('click', closeOnClickOutside);
      } else {
        speedDial.removeAttribute('data-open');
        toggleBtn.textContent = 'Get in Touch';
        document.removeEventListener('click', closeOnClickOutside);
      }
    }

    function closeOnClickOutside(e) {
        if (!toggleBtn.contains(e.target) && !speedDial.contains(e.target)) {
            if (isOpen) toggleMenu();
        }
    }

    toggleBtn.addEventListener('click', (e) => {
        e.stopPropagation();
        toggleMenu();
    });
  }

  // Run on load and after view transitions
  setupActiveHighlighting();
  setupMobileMenu();
  document.addEventListener('astro:page-load', () => {
    setupActiveHighlighting();
    setupMobileMenu();
  });
</script>
