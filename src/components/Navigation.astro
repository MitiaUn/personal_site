---
import ThemeToggle from './ThemeToggle.astro';
import photo from '../assets/photo1.JPG';

const navItems = [
  { name: 'Home', href: '/' },
  { name: 'Projects', href: '/#projects' },
  { name: 'Sport', href: '/sport' },
];

const { currentPath = '/' } = Astro.props;
---

<!-- Desktop Sidebar -->
<nav class="hidden sm:flex flex-col fixed left-0 top-0 h-screen w-64 glass border-r z-50 p-8 items-center">
  <div class="flex flex-col items-center mb-12">
    <img 
      src={photo.src} 
      alt="Profile Photo" 
      class="w-32 h-32 rounded-full border-4 border-white/20 mb-4 object-cover shadow-2xl"
    />
    <h2 class="text-xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-400 to-purple-600">
      Dimitri Unuchek
    </h2>
    <p class="text-sm text-slate-500 dark:text-slate-400">Software Engineer & Athlete</p>
  </div>

  <ul class="flex-1 w-full space-y-4">
    {navItems.map(item => (
      <li>
        <a 
          href={item.href} 
          class={`nav-link block w-full text-lg ${currentPath === item.href ? 'active' : ''}`}
        >
          {item.name}
        </a>
      </li>
    ))}
  </ul>

  <div class="mt-auto pt-8 border-t border-white/10 w-full flex justify-center">
    <ThemeToggle />
  </div>
</nav>

<!-- Mobile Topbar -->
<nav class="sm:hidden fixed top-0 left-0 w-full glass z-50 px-6 py-4 flex justify-between items-center shadow-lg">
  <div class="font-bold text-lg tracking-tight">DU</div>
  
  <ul class="flex space-x-4">
    {navItems.map(item => (
      <li>
        <a 
          href={item.href} 
          class={`nav-link text-sm ${currentPath === item.href ? 'active' : ''}`}
        >
          {item.name}
        </a>
      </li>
    ))}
  </ul>

  <ThemeToggle />
</nav>
