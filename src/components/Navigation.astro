      src={isSportPage ? `${base}/pics_sport/main.jpg` : photo.src} 
      alt="Profile Photo" 
      class="w-32 h-32 rounded-full border-4 border-white/20 mb-4 object-cover shadow-2xl"
    />
    <h2 class={`text-xl font-bold bg-clip-text text-transparent text-center ${
      isSportPage ? 'bg-gradient-to-r from-orange-500 to-red-500' : 'bg-gradient-to-r from-blue-400 to-purple-600'
    }`}>
      {isSportPage ? 'Dimitri Unuchek' : 'Dr Dimitri Unuchek'}
