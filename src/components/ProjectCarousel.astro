---
import { projects } from '../data/projects';
---

<div class="swiper project-carousel w-full py-12">
  <div class="swiper-wrapper">
    {projects.map(project => (
      <div class="swiper-slide w-full md:w-[400px]">
        <a href={`/projects/${project.id}`} class="block group h-full">
          <div class="glass-card h-full flex flex-col overflow-hidden !p-0">
            <div class="aspect-video relative overflow-hidden">
              <img 
                src={project.image} 
                alt={project.title} 
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                transition:name={`img-${project.id}`}
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent opacity-60"></div>
              <div class="absolute bottom-4 left-4">
                <h3 class="text-xl font-bold text-white" transition:name={`title-${project.id}`}>{project.title}</h3>
              </div>
            </div>
            <div class="p-6 flex-1 flex flex-col">
              <p class="text-slate-600 dark:text-slate-400 mb-4 flex-1">{project.teaser}</p>
              <div class="flex flex-wrap gap-2">
                {project.stack.slice(0, 3).map(tech => (
                  <span class="text-[10px] uppercase tracking-wider px-2 py-1 bg-white/10 rounded-md border border-white/5">
                    {tech}
                  </span>
                ))}
              </div>
            </div>
          </div>
        </a>
      </div>
    ))}
  </div>
  <!-- Navigation buttons -->
  <div class="swiper-button-next !text-blue-500 after:!text-2xl"></div>
  <div class="swiper-button-prev !text-blue-500 after:!text-2xl"></div>
  <!-- Pagination -->
  <div class="swiper-pagination"></div>
</div>

<style>
  :root {
    --swiper-theme-color: #3b82f6;
  }
</style>

<script>
  import Swiper from 'swiper';
  import { Navigation, Pagination, Autoplay } from 'swiper/modules';
  import 'swiper/css';
  import 'swiper/css/navigation';
  import 'swiper/css/pagination';

  function initSwiper() {
    new Swiper('.project-carousel', {
      modules: [Navigation, Pagination, Autoplay],
      slidesPerView: 1,
      spaceBetween: 30,
      centeredSlides: true,
      loop: true,
      autoplay: {
        delay: 5000,
        disableOnInteraction: false,
      },
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      breakpoints: {
        768: {
          slidesPerView: 2,
          centeredSlides: false,
        },
        1024: {
          slidesPerView: 2.5,
          centeredSlides: false,
        },
      },
    });
  }

  // Initialize on page load
  initSwiper();

  // Re-initialize after view transitions
  document.addEventListener('astro:after-swap', initSwiper);
</script>
