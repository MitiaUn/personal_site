---
const { items } = Astro.props;
---

<div class="space-y-6">
  {items.map((item) => (
    <div class="group">
      <div class="flex flex-col sm:flex-row sm:items-baseline gap-1 sm:gap-2">
        <a href={item.url} class="group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-200">
            <h3 class="text-lg font-semibold text-slate-900 dark:text-white inline">{item.title}</h3>
        </a>
        <span class="hidden sm:inline text-slate-400 dark:text-slate-600">â€¢</span>
        <div class="text-sm text-slate-500 dark:text-slate-400">
           {item.date} <span class="mx-1">|</span> {item.organization}
        </div>
      </div>
      <p class="mt-1 text-slate-600 dark:text-slate-400 text-sm leading-relaxed max-w-3xl">
        {item.description}
      </p>
    </div>
  ))}
</div>
