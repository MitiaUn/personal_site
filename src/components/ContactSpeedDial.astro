<div id="contact-bar-container" class="fixed top-6 right-6 z-50 flex items-center justify-end font-sans">
  <div 
    id="contact-links" 
    class="flex flex-row flex-nowrap items-center gap-6 bg-slate-900/60 backdrop-blur-md rounded-full py-2.5 px-8 transition-all duration-500 ease-in-out origin-right transform scale-x-0 opacity-0 absolute right-0 translate-x-4 pointer-events-none data-[open=true]:scale-x-100 data-[open=true]:opacity-100 data-[open=true]:translate-x-0 data-[open=true]:relative data-[open=true]:pointer-events-auto border border-white/10 shadow-lg whitespace-nowrap"
  >
    {links.map(link => (
      <a 
        href={link.url} 
        target="_blank" 
        rel="noopener noreferrer" 
        class="group flex items-center gap-2 text-white/90 hover:text-white hover:scale-105 transform transition-all text-sm font-medium whitespace-nowrap"
        aria-label={link.name}
      >
        <span class="opacity-70 group-hover:opacity-100 transition-opacity" set:html={link.icon} />
        <span class="hidden sm:inline">{link.name}</span>
      </a>
    ))}
    <button id="contact-close" class="ml-2 text-white/70 hover:text-white transition-colors p-1" aria-label="Close">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
    </button>
  </div>
  
  <button 
    id="contact-toggle" 
    class="bg-slate-900/40 hover:bg-slate-900/60 backdrop-blur-md text-white px-6 py-2.5 rounded-full border border-white/10 shadow-lg transition-all duration-300 absolute right-0 data-[hidden=true]:opacity-0 data-[hidden=true]:pointer-events-none data-[hidden=true]:scale-90 whitespace-nowrap"
  >
    <span class="font-medium tracking-wide">Get in Touch</span>
  </button>
</div>

<script>
  document.addEventListener('astro:page-load', () => {
    const toggle = document.getElementById('contact-toggle');
    const closeBtn = document.getElementById('contact-close');
    const links = document.getElementById('contact-links');
    const container = document.getElementById('contact-bar-container');

    if (!toggle || !links || !container) return; // Guard clause

    function openMenu() {
      links?.setAttribute('data-open', 'true');
      toggle?.setAttribute('data-hidden', 'true');
      const firstLink = links?.querySelector('a');
      if (firstLink instanceof HTMLElement) {
          firstLink.focus();
      }
    }

    function closeMenu() {
      links?.removeAttribute('data-open');
      toggle?.removeAttribute('data-hidden');
    }

    toggle.addEventListener('click', (e) => {
        e.stopPropagation();
        openMenu();
    });

    closeBtn.addEventListener('click', (e) => {
        e.stopPropagation();
        closeMenu();
    });

    // Close when clicking outside
    document.addEventListener('click', (event) => {
      if (!container.contains(event.target as Node) && links?.hasAttribute('data-open')) {
        closeMenu();
      }
    });

    // Close on Escape key
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && links?.hasAttribute('data-open')) {
            closeMenu();
            toggle?.focus();
        }
    });
  });
</script>
